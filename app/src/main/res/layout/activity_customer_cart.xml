<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CustomerFruitAppleSelectPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8AF383"
    android:orientation="vertical"
    tools:context=".CustomerCart">

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/cartItemsDisplay"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/search_space"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="               My Cart"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/cartItemsDisplay" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/CustomerFruitAppleVendorDisplay"
        android:layout_width="408dp"
        android:layout_height="612dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="56dp">

        <LinearLayout
            android:id="@+id/outer_layout"
            android:layout_width="408dp"
            android:layout_height="619dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/furtherbtns"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/cartItemsDisplay"
        app:layout_constraintBottom_toTopOf="parent">

        <Button
            android:id="@+id/old_orders"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:text="old orders"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/cartItemsDisplay" />

        <Button
            android:id="@+id/place_order"
            android:layout_width="208dp"
            android:layout_height="match_parent"
            android:text="place order" />

    </LinearLayout>
</LinearLayout>